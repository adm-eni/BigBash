{% extends 'base.html.twig' %}

{% form_theme locationForm 'views/form_theme.html.twig' %}

{% block title %}Cr√©ation Lieu{% endblock %}

{% block body %}
  <div class="container px-4 mx-auto h-screen flex items-center justify-center">
    <div class="max-w-lg">
      <h1 class="text-2xl font-bold mb-6 text-center">Ajouter un lieu</h1>

      {{ form_start(locationForm,{'attr': {'class': 'w-full'}}) }}

      <div class="space-y-4 mr-28">
        {% for field in ['name', 'street', 'latitude','longitude','city'] %}
          <div class="form-group flex items-center">
            {{ form_label(locationForm[field], null, {'label_attr': {'class': 'w-1/3 text-right pr-4 whitespace-nowrap'}}) }}
            <div class="w-2/3">
              {{ form_widget(locationForm[field]) }}
              {{ form_errors(locationForm[field]) }}
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="flex justify-center space-x-4 mt-8">
        {% for field in ['create', 'cancel'] %}
          {{ form_widget(locationForm[field], {'attr': {'class': 'button bg-amber-300 bg-opacity-30 px-4 py-2'}}) }}
        {% endfor %}

        {{ form_end(locationForm) }}
      </div>
    </div>
  </div>
{% endblock %}