                <h2 class="text-3xl font-bold mb-4 text-amber-300">Bouts de code</h2>
                <div class="bg-gray-800 rounded-lg shadow-md p-6 space-y-9">
                    <div class="space-y-3">
                        <p>Enum pour les états des sorties :</p>
                        <div class="flex justify-center space-x-8 items-center">
                    <pre class="border-solid border p-6">&lt;?php

namespace App\Enum;

enum Status: string
{
  case CREATED = 'En création';
  case OPEN = 'Ouvert';
  case BOOKED = 'Complet';
  case ONGOING = 'En cours';
  case CANCELED = 'Annulé';
  case PAST = 'Terminé';
  case CLOSED = 'Clôturé';</pre>

                            <pre class="border-solid border p-6">if ($outing->getStatus() === Status::OPEN) $outing->setStatus(Status::BOOKED);</pre>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <p>Format des dates avec twig/intl-extra :</p>
                        <a href="{{ path('outing_show', {'id': 1}) }}"
                           class="flex justify-center space-x-8 items-center">
                    <pre class="border-b border p-6 max-w-fit">
&lt;div class="font-semibold text-right truncate">Date et heure de la sortie :&lt;/div&gt;
&lt;div class="truncate"&gt; &#123;&#123; outing.startAt|format_datetime(locale='fr_FR',pattern="EEEE dd MMMM YYYY 'à' HH:mm")|capitalize|default('') &#125;&#125;&lt;/div&gt; </pre>

                        </a>
                    </div>
                </div>
            </section>

